#include <stdio.h>
#include<stdlib.h>
 
int main(void) {
	int t;
	scanf("%d",&t);
	while(t>0)
	{
	    int a,b,c,d,e;
	    scanf("%d%d%d",&a,&b,&c);
	    d=abs(c-a);
	    e=abs(c-b);
	    if(d>e)
	    {
	        printf("Lion A");
	    }
	    else if(d<e)
	    {
	        printf("lion B");
	    }
	    else
	    {
	        printf("Deer C");
	    }
	    t--;
	}
	return 0;
}
