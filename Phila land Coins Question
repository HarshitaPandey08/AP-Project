#include<stdio.h>
int main()
{
  int t,n,l=0,sum=0;
  scanf("%d",&t);
  while(t>0)
  {
    scanf("%d",&n);
   
   l=0;
   sum=0;
    for(int i=1;i<=n;i++)
    {
        sum=sum+i;
        l++;
        if(sum>=n)
        {
            break;
        }
    }
    
        
    
    printf("%d",l);
     t--;
  }
 
}
